{
  "name": "@system-ui-js/multi-drag-container",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --project tsconfig.build.json",
    "build:lib": "vite build --mode lib",
    "build:demo": "vite build --mode demo",
    "build:all": "npm run build:lib && npm run build:demo",
    "build:types": "tsc --project tsconfig.build.json",
    "preview": "vite preview",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:basic": "playwright test tests/e2e/multi-touch.spec.ts --project=chromium",
    "test:e2e:report": "playwright show-report",
    "prepublishOnly": "npm run test && npm run build:all",
    "publish:npm": "npm publish",
    "release": "npm run prepublishOnly && npm run publish:npm"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "playwright": "^1.54.2",
    "ts-jest": "^29.4.1",
    "tslint": "^6.1.3",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-checker": "^0.6.2"
  },
  "dependencies": {
    "@system-ui-js/multi-drag": "^0.2.1",
    "mathjs": "^14.6.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "package.json",
    "LICENSE",
    "assets"
  ],
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
